<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<grid model="com.axelor.gst.db.InvoiceLine" title="InvoiceLine"
		name="grid-invoiceLine">
		<field name="product" />
		<field name="hsbn" />
		<field name="item" />
		<field name="qty" />
		<field name="price" />
		<field name="netAmount" />
		<field name="gstRate" />
		<field name="igst" />
		<field name="sgst" />
		<field name="cgst" />
		<field name="grossAmount" />


	</grid>

	<form model="com.axelor.gst.db.InvoiceLine" title="InvoiceLine"
		name="form-invoiceLine">
		<panel title="Overview">
			<field name="invoice" />
			<field name="product" onChange="action-change-hsbn"/>
			<field name="hsbn" />
			<field name="item" />
			<field name="qty" />
			<field name="price" />	
			<field name="netAmount" />
			<field name="gstRate" />
			<field name="igst" />
			<field name="sgst" />
			<field name="cgst" />
			<field name="grossAmount" />
		</panel>
	</form>
	
	<action-record name="action-change-hsbn" model="com.axelor.gst.db.InvoiceLine">
		<field name="hsbn" expr="eval: product.hsbn "/>
		<field name="item" expr="eval: product.name"/>
		<field name="price" expr="eval: product.salePrice"/>
		<field name="gstRate" expr="eval: product.gstRate"/>
	</action-record>
	
	
</object-views>








